@page
@model PrivacyModel
<h1>@ViewData["Title"]</h1>

<form method="post">
    <label for="customerSelect">Kies een klant:</label>
    <select asp-for="SelectedCustomerId" id="customerSelect" name="SelectedCustomerId">
        @foreach (var customer in Model.Customers)
        {
            <option value="@customer.Id">@customer.Name</option>
        }
    </select>
    <button type="submit">Inloggen</button>
</form>

@if (Model.SelectedCustomer != null)
{
    <div>
        <h2>Welkom, @Model.SelectedCustomer.Name!</h2>
        <p>Adres: @Model.SelectedCustomer.Address</p>
    </div>
}
